@model AitiseisAcceptViewModel
@using Primus.DAL;
@using Primus.Models;
@{
    Layout = null;
    string poso_rent = string.Format("{0:N2} €", Model.ΜΙΣΘΩΤΗΡΙΟ_ΠΟΣΟ);
    string eisodima = string.Format("{0:N2} €", Model.ΟΙΚΟΓΕΝΕΙΑ_ΕΙΣΟΔΗΜΑ);
    string poso_stegasi = string.Format("{0:N2} €", Model.ΣΤΕΓΑΣΗ_ΠΟΣΟ);
    string poso_sitisi = string.Format("{0:N2} €", Model.ΣΙΤΙΣΗ_ΠΟΣΟ);
    string apostasi = string.Format("{0:N2} km", Model.ΔΙΑΜΟΝΗ_ΑΠΟΣΤΑΣΗ);
    string date_rent = "";
    Nullable<DateTime> dt = Model.ΜΙΣΘΩΤΗΡΙΟ_ΗΜΝΙΑ;
    date_rent = dt.HasValue ? dt.Value.ToString("dd-MM-yyyy") : string.Empty;
    string synexeia = "OXI";
    if (Model.ΣΥΝΕΧΕΙΑ) { synexeia = "NAI"; }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <style scoped="scoped">
        .k-detail-cell .k-tabstrip .k-content {
            padding: 0.2em;
        }

        .student-details ul {
            list-style: none;
            font-style: italic;
            margin: 15px;
            padding: 0;
        }

        .student-details ul li {
            margin: 0;
            line-height: 1.7em;
        }

        .student-details label {
            display: inline-block;
            width: 200px;
            padding-right: 10px;
            text-align: right;
            font-style: normal;
            font-weight: bold;
        }
    </style>
</head>

<body>
    <div class="body-content" style="margin:5px 0px 5px 0px;font-size:small;">

        @(Html.Kendo().TabStrip()
        .Name("TabStrip")
        .SelectedIndex(0)
        .Animation(animation => animation.Open(open => open.Fade(FadeDirection.In)))
        .Items(items =>
        {
            items.Add().Text("Στοιχεία αίτησης").Content(
                @<div class="student-details">
                    <table>
                        <tr>
                            <td style="min-width:500px">
                                <ul>
                                    <li>
                                        <label>Τέκνα οικογένειας:</label>@Model.ΟΙΚΟΓΕΝΕΙΑ_ΤΕΚΝΑ
                                    </li>
                                    <li>
                                        <label>Εισόδημα:</label>@eisodima
                                    </li>
                                    <li>
                                        <label>Μισθωτήριο:</label>@poso_rent
                                    </li>
                                    <li>
                                        <label>Ποσό στέγασης:</label>@poso_stegasi
                                    </li>
                                    <li>
                                        <label>Ποσό σίτισης:</label>@poso_sitisi
                                    </li>
                                </ul>
                            </td>
                            <td style="min-width:500px">
                                <ul>
                                    <li>
                                        <label>Ημ/νία μισθωτήριου:</label>@date_rent
                                    </li>
                                    <li>
                                        <label>Ηλικία:</label>@Model.ΗΛΙΚΙΑ
                                    </li>
                                    <li>
                                        <label>Κοινωνικά κριτήρια:</label>@Model.ΚΟΙΝΩΝΙΚΗ_ΟΜΑΔΑ
                                    </li>
                                    <li>
                                        <label>Συνέχεια επιδότησης:</label>@synexeia
                                    </li>
                                    <li>
                                        <label>Απόσταση διαμονής:</label>@apostasi
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </table>
                </div>);
            items.Add().Text("Στοιχεία μαθητή").Content(
                @<div class="student-details">
                     <table>
                         <tr>
                             <td style="min-width:500px">
                                 <ul>
                                     <li>
                                         <label>Παρατηρήσεις:</label>@Model.ΠΑΡΑΤΗΡΗΣΕΙΣ
                                     </li>
                                     <li>
                                         <label>Διαμονή-Δήμος:</label>@Model.ΔΙΑΜΟΝΗ_ΔΗΜΟΣ
                                     </li>
                                     <li>
                                         <label>Διαμονή-Περιφέρεια:</label>@Model.ΔΙΑΜΟΝΗ_ΠΕΡΙΦΕΡΕΙΑ
                                     </li>
                                     <li>
                                         <label>Διαμονή-Διεύθυνση:</label>@Model.ΔΙΑΜΟΝΗ_ΔΙΕΥΘΥΝΣΗ
                                     </li>
                                     <li>
                                         <label>Διαμονή-Περιοχή:</label>@Model.ΔΙΑΜΟΝΗ_ΠΕΡΙΟΧΗ
                                     </li>
                                     <li>
                                         <label>Διαμονή-Τηλέφωνα:</label>@Model.ΔΙΑΜΟΝΗ_ΤΗΛΕΦΩΝΟ
                                     </li>
                                </ul>
                         </td>
                     </tr>
                 </table>
                </div>);
        })
        )   @*-- Tabstrip ---*@
    </div>
</body>
</html>
