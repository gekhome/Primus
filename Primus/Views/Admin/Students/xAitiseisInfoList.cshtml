@model sqlAitiseisViewModel
@using Primus.DAL;
@using Primus.Models;


@{
    ViewBag.Title = "Μητρώο αιτήσεων";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .k-grid {
        font-size: 11px;
    }
</style>


@Html.AntiForgeryToken()
<div class="page-header" style="margin:5px 30px 5px 30px">
    <span style="margin:5px 30px 5px 30px;font-family:'Segoe UI';font-size:large;text-shadow:1px 1px #000000">
        <font style="color:#494949;float:left;font-family:'Segoe UI'">Μητρώο αιτήσεων στέγασης-σίτισης</font>
    </span>
    <span style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">@Html.ActionLink("Επιστροφή", "Index", "Admin", null, new { @class = "btn btn-warning", style = "font-size:14px" })</span>
    <button class="btn btn-info" style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px" onclick="RefreshGrid()">Ανανέωση</button>
</div>

<div class="body-content" style="margin:10px 30px 5px 30px;font-size:small">

    @(Html.Kendo().Grid<sqlAitiseisViewModel>()
        .Name("Grid")
        .AutoBind(true)
        .HtmlAttributes(new { style = "display: block;font-size:11px" })
        .Selectable()
        .Filterable()
        .Groupable()
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(10))
        .Scrollable(scr => scr.Height(380))
        .Columns(columns =>
        {
            columns.Bound(c => c.ΑΦΜ).Width(12);
            columns.Bound(c => c.ΟΝΟΜΑΤΕΠΩΝΥΜΟ).Width(32)
                .ClientFooterTemplate("Συνολικό πλήθος: #=count#")
                .ClientGroupFooterTemplate("Πλήθος: #=count#");
            columns.Bound(c => c.SCHOOLYEAR_TEXT).Width(16);
            columns.Bound(c => c.SCHOOL_NAME).Width(26);
            columns.Bound(c => c.EIDIKOTITA_TEXT).Width(50);
            columns.Bound(c => c.ΤΑΞΗ_ΛΕΚΤΙΚΟ).Width(12);
            columns.Bound(c => c.ΕΠΙΔΟΜΑ_ΚΕΙΜΕΝΟ).Width(20);
            columns.Bound(c => c.ΣΥΝΕΧΕΙΑ).Width(12);
            columns.Bound(c => c.ΑΙΤΗΣΗ_ΚΩΔ).Hidden();
            columns.Bound(c => c.ΣΧΟΛΙΚΟ_ΕΤΟΣ).Hidden();
        })
            .DataSource(ds => ds
                .Ajax()
                .PageSize(60)
                .ServerOperation(true)
                .Model(model =>
                {
                    model.Id(p => p.ΑΙΤΗΣΗ_ΚΩΔ);
                })
                .Read(read => read.Action("Aitiseis_Read", "Admin"))
                .Events(events => events.Error("error_handler"))
                //.Group(groups => groups.Add(p => p.SCHOOLYEAR_TEXT))
                .Aggregates(a =>
                {
                    a.Add(p => p.ΟΝΟΜΑΤΕΠΩΝΥΜΟ).Count();
                })
            )
            .Events(events => events.Change("change"))
    )

</div>

<div id="partialDiv" class="body-content" style="margin:15px 30px 5px 30px;font-size:small">
    @Html.Partial("xAitiseisInfoPartial")
</div>

<script id="events" type="text/javascript">

    function change(e) {
        var dataItem = this.dataItem(this.select());
        var aitisiID = dataItem.ΑΙΤΗΣΗ_ΚΩΔ;
        //MessageBoxAlert("studentID=" + aitisiID);
        // Handle data source of partial view
        $.ajax({
            url: '@Url.Action("GetAitisiRecord", "Admin")?aitisiId=' + aitisiID,
            type: 'GET',
            data: "",
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                $("#partialDiv").html(data);
            },
            error: function () {
                MessageBoxAlert("Προέκυψε σφάλμα δεδομένων. Δοκιμάστε πάλι αργότερα.");
            }
        });
    }

    function RefreshGrid(e) {
        var grid = $("#Grid").data("kendoGrid");
        grid.dataSource.read();

    }

</script>





