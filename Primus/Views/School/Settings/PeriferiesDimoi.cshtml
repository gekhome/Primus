@using Primus.DAL;
@using Primus.Models;


@{
    ViewBag.Title = "Περιφέρειες-Δήμοι";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
}

    @Html.AntiForgeryToken()
    <div class="page-header" style="margin:5px 60px 5px 60px">
        <span style="margin:5px 60px 5px 60px;font-family:'Segoe UI';font-size:large;text-shadow:1px 1px #000000">
            <font style="color:#494949;float:left;font-family:'Segoe UI'">Περιφερειακές Ενότητες και Δήμοι</font>
        </span>
        <span style="margin:5px 10px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">
            @Html.ActionLink("Επιστροφή", "Index", "School", null, new { @class = "btn btn-warning", style = "font-size:14px" })
        </span>
        <span style="margin:5px 5px 5px 10px;float:right;font-family:'Segoe UI';font-size:14px">
            @Html.ActionLink("Εκτύπωση", "PeriferiesPrint", "Settings", null, new { @class = "btn btn-primary", style = "font-size:14px", target = "_blank" })
        </span>
    </div>

    <div class="body-content" style="margin:5px 60px 5px 60px">

        @(Html.Kendo().Grid<SysPeriferiaViewModel>()
        .Name("Master")
        .Columns(columns =>
        {
            columns.Bound(e => e.PERIFERIA_NAME).Width(90);
        })
        .Selectable()
        .Pageable()
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(5))
        .Filterable()
        .Scrollable(scr => scr.Height(160))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(40)
            .Read(read => read.Action("Periferies_Read", "Settings"))
        )
        .Events(events => events.Change("change1"))
        )

        <p></p>

        @(Html.Kendo().Grid<SysPeriferiakiEnotitaViewModel>()
        .Name("Child1")
        .AutoBind(false)
        .HtmlAttributes(new { style = "display: block" })
        .Pageable()
        .Selectable()
        .Filterable()
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(5))
        .Scrollable(scr => scr.Height(160))
        .Columns(columns =>
        {
            columns.Bound(e => e.PERIFERIA_ENOTITA_NAME).Width(120);
        })
        .DataSource(ds => ds
        .Ajax()
        .PageSize(40)
        .ServerOperation(false)
        .Read(read => read.Action("PeriferiakiEnotita_Read", "Settings"))
        .Aggregates(a =>
        {
            a.Add(p => p.PERIFERIA_ENOTITA_ID).Count();
        })
        )
        .Events(events => events.Change("change2"))
        )

        <p></p>

        @(Html.Kendo().Grid<SysDimosViewModel>()
        .Name("Child2")
        .AutoBind(false)
        .HtmlAttributes(new { style = "display: block" })
        .Pageable()
        .Filterable()
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(5))
        .Scrollable(scr => scr.Height(260))
        .Columns(columns =>
        {
            columns.Bound(e => e.DIMOS).Width(120);
        })
        .DataSource(ds => ds
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
        .Read(read => read.Action("Dimos_Read", "Settings"))
        .Aggregates(a =>
        {
            a.Add(p => p.DIMOS_ID).Count();
        })
        )
        )

    </div>

<script>

    function change1(e) {
        var dataItem = this.dataItem(this.select());
        var periferiaID = dataItem.PERIFERIA_ID;

        $("#Child1").data("kendoGrid").dataSource.read({ periferiaId: periferiaID });
        $("#Child1").css("display", "block");
    }

    function change2(e) {
        var dataItem = this.dataItem(this.select());
        var periferiaEnotitaID = dataItem.PERIFERIA_ENOTITA_ID;

        $("#Child2").data("kendoGrid").dataSource.read({ periferiaEnotitaId: periferiaEnotitaID });
        $("#Child2").css("display", "block");
    }


</script>

<script type="text/javascript">

    function RefreshGrid(e) {
        var grid = $("#Child").data("kendoGrid");
        var dataItem = $("#Master").dataItem($("#Master").select());
        var perId = dataItem.PERIFERIA_ID;

        grid.dataSource.read({ periferiaId: perId });
    }

</script>

